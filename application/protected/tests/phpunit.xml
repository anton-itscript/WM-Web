<phpunit bootstrap="bootstrap.php"
		colors="true"
		convertErrorsToExceptions="true"
		convertNoticesToExceptions="true"
		convertWarningsToExceptions="true"
		stopOnFailure="false">

	<logging>
		<log type="coverage-html" target="../../www/tests/coverage/" charset="UTF-8"
			yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
		<!--<log type="testdox-html" target="../../www/tests/result/result.html" />	-->
		<log type="junit" target="../../www/tests/result/result.xml" />
	</logging>

	<selenium>
		<browser name="Internet Explorer" browser="*iexplore" />
		<browser name="Firefox" browser="*firefox" />
	</selenium>

</phpunit>